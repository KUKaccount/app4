<h1>新規登録</h1>
<%= link_to '新規作成する', new_article_path %>
<table class="background">
  <tr>
    <th>タイトル</th>
    <th>テキスト</th>
    <th>画像</th>
    <th colspan="3"></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= article.image.attached? %></td>
    <td><%= link_to '開く', article_path(article) %></td>
    <td><%= link_to '編集', edit_article_path(article) %></td>
    <td><%= link_to '消去', article_path(article),
                    method: :delete, data: { confirm: '消去しますか？' } %></td>
  </tr>
<% end %>
</table>